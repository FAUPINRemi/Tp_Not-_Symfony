{# templates/admin/users/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Nouvel Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer un nouvel utilisateur</h1>

        <div class="card">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="form-group mb-3">
                        {{ form_row(form.email, {
                            'attr': {'class': 'form-control'},
                            'label': 'Email'
                        }) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(form.password, {
                            'attr': {'class': 'form-control'},
                            'label': 'Mot de passe'
                        }) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(form.roles, {
                            'attr': {'class': 'form-control'},
                            'label': 'Rôles'
                        }) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(form.name, {
                            'attr': {'class': 'form-control'},
                            'label': 'Nom'
                        }) }}
                    </div>

                    <div class="form-group mb-3">
                        {{ form_row(form.phoneNumber, {
                            'attr': {'class': 'form-control'},
                            'label': 'Numéro de téléphone'
                        }) }}
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary">Créer l'utilisateur</button>
                        <a href="{{ path('admin_users_list') }}" class="btn btn-secondary">Retour à la liste</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}