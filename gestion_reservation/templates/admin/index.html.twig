{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Tableau de bord Administrateur</h1>

        <div class="row">
            {# Users Card #}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h2 class="h5 mb-0">Gestion des Utilisateurs</h2>
                    </div>
                    <div class="card-body">
                        <p>Nombre total d'utilisateurs: {{ users|length }}</p>
                        <div class="mt-3">
                            <a href="{{ path('admin_users_list') }}" class="btn btn-outline-primary">Liste des utilisateurs</a>
                            <a href="{{ path('admin_user_new') }}" class="btn btn-success">Nouvel utilisateur</a>
                            <a href="{{ path('app_admin_new') }}" class="btn btn-warning">Nouvel admin</a>
                        </div>
                    </div>
                </div>
            </div>

            {# Reservations Card #}
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h2 class="h5 mb-0">Gestion des Réservations</h2>
                    </div>
                    <div class="card-body">
                        <p>Nombre total de réservations: {{ reservations|length }}</p>
                        <div class="mt-3">
                            <a href="{{ path('admin_reservations_list') }}" class="btn btn-outline-info">Liste des réservations</a>
                            <a href="{{ path('admin_reservation_new') }}" class="btn btn-success">Nouvelle réservation</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Recent Activity #}
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h2 class="h5 mb-0">Dernières Réservations</h2>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Utilisateur</th>
                                        <th>Événement</th>
                                        <th>Créneau</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reservation in reservations|slice(0, 5) %}
                                        <tr>
                                            <td>{{ reservation.date|date('d/m/Y') }}</td>
                                            <td>{{ reservation.user.name }}</td>
                                            <td>{{ reservation.eventName }}</td>
                                            <td>{{ reservation.timeSlot }}</td>
                                            <td>
                                                <a href="{{ path('admin_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}