{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
    <div class="container">
        <h1>Créer une nouvelle réservation</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.timeSlot, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_row(form.eventName, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button class="btn btn-primary">Réserver</button>
        {{ form_end(form) }}

        <a href="{{ path('app_reservation_index') }}" class="btn btn-secondary mt-3">Retour</a>
    </div>
{% endblock %}