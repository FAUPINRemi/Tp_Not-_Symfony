{% extends 'base.html.twig' %}

{% block title %}Liste des Réservations{% endblock %}

{% block body %}
    <div class="container">
        <h1>Réservations</h1>

        <a href="{{ path('app_reservation_new') }}" class="btn btn-primary mb-3">Nouvelle Réservation</a>

        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Créneau</th>
                    <th>Événement</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Utilisateur</th>
                    {% endif %}
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for reservation in reservations %}
                    <tr>
                        <td>{{ reservation.date|date('d/m/Y') }}</td>
                        <td>{{ reservation.timeSlot }}</td>
                        <td>{{ reservation.eventName }}</td>
                        {% if is_granted('ROLE_ADMIN') %}
                            <td>{{ reservation.user.name }}</td>
                        {% endif %}
                        <td>
                            <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" style="display: inline-block">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
                                <button class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?')">Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}