{% extends 'base.html.twig' %}

{% block title %}Détails Utilisateur{% endblock %}

{% block body %}
    <div class="container">
        <h1>Détails de l'utilisateur</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ user.phoneNumber }}</td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour</a>
        </div>
    </div>
{% endblock %}